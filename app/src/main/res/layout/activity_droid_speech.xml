<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:alpha="0.8"

    tools:context="com.vikramezhil.droidspeechexample.Activity_DroidSpeech">




    <ImageView
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/btn_stop"
        android:contentDescription="@string/app_name"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="0.3"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="0dp"
                android:background="@drawable/blackborder"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="openseedata"
                android:src="@drawable/se7"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="0dp"
                android:background="@drawable/blackborder"
                android:onClick="openinfo"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/find6"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="0dp"
                android:background="@drawable/blackborder"
                android:onClick="openseeoffers"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/specialoffer"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="वैद्यकीय नोंदी"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="माहिती शोधा"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="सवलती व योजना"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="0dp"
                android:background="@drawable/blackborder"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="helpp"
                android:src="@drawable/help"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="0dp"
                android:background="@drawable/blackborder"
                android:onClick="openremainder"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/alarm2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:onClick="openuploaddata"
                android:src="@drawable/uploaddata" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="संकटकालीन मदत"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="औषधांची आठवण"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="वैद्यकीय माहिती भरा"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="0dp"
                android:background="@drawable/blackborder"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="opendonation"
                android:src="@drawable/organdonation"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="0dp"
                android:background="@drawable/blackborder"
                android:onClick="openmedical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/tablets"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="0dp"
                android:background="@drawable/blackborder"
                android:onClick="openschemes"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/hospital2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="अवयवदान"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="जन औषधालय"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="सरकारी योजना"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"

                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/ic_btn_speak_now"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
